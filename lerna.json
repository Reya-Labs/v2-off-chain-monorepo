{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [],
      "registry": "https://npm.pkg.github.com",
      "conventionalCommits": true,
      "yes": true,
      "skipGit": true,
      "skipNpm": false
    },
    "version": {
      "message": "chore(release): bump updated packages",
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
